<h1>ユーザー一覧</h1>

<table class="table">
  <thead>
   <tr>
    <th>名前</th>
    <th>id</th>
    <th>タスク数</th>
    <th>管理者権限</th>
   </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
      <tr class="task_row">
        <td><%= user.name %></td>
        <td><%= user.id %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin %></td>
        <td><%= link_to "user詳細", admin_user_path(user.id) %></td>
        <td><%= link_to "userを編集する", edit_admin_user_path(user.id) %></td>
        <td><%= link_to "userを削除する",  admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<%= link_to '新しくユーザーを作成する', new_admin_user_path %>

